set -o errtrace
set -o errexit
set -o nounset

PROGNAME=cksumdb
DIGEST=sha256
readonly PROGNAME DIGEST

die() {
	printf -- "\e[1;31mERROR:\e[0m ""$@" 1>&2
	exit 1
}

msg() {
	printf -- "\e[1;32mINFO:\e[0m ""$@" 1>&2
}

warn() {
	printf -- "\e[1;33mWARN:\e[0m ""$@" 1>&2
}

trap_ERR() {
	local errcode="$1"
	local lineno="$2"
	local command="$3"
	shift 3
	local traceback=""

	[[ -n "$*" ]] && printf -v traceback "\n    => in %s" "$@"
	die "line %s - '%s' failed (code=%s)%s\n" "$lineno" "$command" "$errcode" "$traceback"
}
trap 'trap_ERR "$?" "$LINENO" "$BASH_COMMAND" "${FUNCNAME[@]:+${FUNCNAME[@]}}"' ERR

# Check if we have all non-builtin dependencies
type -p openssl &>/dev/null || die "No openssl!\n"
type -p rsync   &>/dev/null || die "No rsync!\n"

get_cksum() {
	local path="$1"
	local cksum="$(openssl dgst -$DIGEST < "$path")"
	printf "%s" "${cksum##* }"
}

get_mtime_size() {
	local path="$1"
	stat -c "%Y-%s" "$path"
}

db_init_file() {
	if [[ ! -d "$arg_dbpath" ]]; then
		if [[ -e "$arg_dbpath" ]]; then
			die "Invalid database!"
		fi

		mkdir -p "$arg_dbpath"
		msg "Initialized database: %s\n" "$arg_dbpath"
	else
		msg "Using database: %s\n" "$arg_dbpath"
	fi

	#rsync -rq --delete -f"+ */" -f"- *" "${arg_path}/" "${arg_dbpath}/" <-- does not remove empty dirs
	rsync -rq --max-size=0 --min-size=1 --delete "${arg_path}/" "${arg_dbpath}/"
}

db_get_file() {
	local path="$1"
	local attr="$2"
	local data
	local db_path="${arg_dbpath}/${path}"

	if [[ -f "$db_path" ]]; then
		data="$(< "$db_path")"
	else
		return 0
	fi

	case "$attr" in
		mtime_size)
			printf "%s" "${data% *}"
			;;
		cksum)
			printf "%s" "${data#* }"
			;;
		*)
			die "Invalid attribute: %s\n" "$attr"
			;;
	esac
}

db_set_file() {
	local path="$1"
	local mtime_size="$2"
	local cksum="$3"
	local db_path="${arg_dbpath}/${path}"

	if [[ ! -d "${db_path%/*}" ]]; then
		die "Cannot set entry for: %s\n" "$path"
	fi

	printf "%s %s" "$mtime_size" "$cksum" > "$db_path" \
		|| die "Cannot write to: %s\n" "$db_path"
}

db_init() {
	case "$arg_backend" in
		file)
			[[ "$cmd" == "update" ]] && db_init_file || :
			db_get() { db_get_file "$@"; }
			db_set() { db_set_file "$@"; }
			;;
		*)
			die "Unknown database backend: %s\n" "$arg_backend"
			;;
	esac
}

refresh_pids() {
	local pid_count="${#pids[@]}"
	(( pid_count < ${arg_parallel[0]} )) && return 0 || :

	local _pids=("${pids[@]}")

	local stalled=0
	while :; do
		pids=()
		for pid in "${_pids[@]}"; do
			if kill -0 "$pid" &>/dev/null; then
				pids+=($pid)
			fi
		done

		if (( ${#pids[@]} < ${arg_parallel[0]} )); then
			break
		elif (( stalled > 5 )); then
			sleep 0.01
		else
			(( ++stalled )) || :
		fi
	done
}

barrier_pids() {
	local all_done=0
	while (( ! all_done )); do
		all_done=1
		for pid in "${pids[@]:+${pids[@]}}"; do
			if kill -0 "$pid" &>/dev/null; then
				all_done=0
				break
			fi
		done
		(( all_done )) || sleep 1
	done
}

spawn_tasks() {
	local fn="$1"
	local path_jobs=()
	local jobs_per_task=${arg_parallel[1]}
	local path
	while (( jobs_per_task-- )); do
		read path || break
		path_jobs+=("$path")
	done
	(
		for path in "${path_jobs[@]:+${path_jobs[@]}}"; do
			$fn "$path"
		done
	) &
	pids+=($!)
	(( ${#path_jobs[@]} < ${arg_parallel[1]} )) && return 1 || :
}

update() {
	local path="$1"
	[[ -r "${arg_path}/${path}" ]] || die "Cannot read: %s\n" "$path"

	local f_mtime_size="$(get_mtime_size "${arg_path}/${path}")"
	local db_mtime_size="$(db_get "$path" mtime_size)"

	[[ "$f_mtime_size" == "$db_mtime_size" ]] && return 0 || :

	local f_cksum="$(get_cksum "${arg_path}/${path}")"
	if db_set "$path" "$f_mtime_size" "$f_cksum"; then
		printf "Successfully updated: %s\n" "$path"
	else
		( die "Failed to update: %s\n" "$path" ) \
			|| (( arg_all )) || exit 10
	fi

	return 0
}

cmd_update() {
	db_init

	msg "Updating: %s\n" "$arg_path"

	find "$arg_path" -type f -printf "%P\n" |
	(
		pids=()
		while :; do
			if (( ${arg_parallel[0]} )); then
				spawn_tasks update || break
				refresh_pids
			else
				read path || break
				update "$path"
			fi
		done
		barrier_pids
	) || exit $?
}

verify() {
	local path="$1"
	[[ -r "${arg_path}/${path}" ]] || die "Cannot read: %s\n" "$path"

	local f_mtime_size="$(get_mtime_size "${arg_path}/${path}")"
	local db_mtime_size="$(db_get "$path" mtime_size)"

	if [[ -z "$db_mtime_size" ]]; then
		warn "No mtime/size entry: %s\n" "$path"
		return 0
	elif [[ "$f_mtime_size" != "$db_mtime_size" ]]; then
		warn "mtime/size entry does not match: %s\n" "$path"
		return 0
	fi

	local f_cksum="$(get_cksum "${arg_path}/${path}")"
	local db_cksum="$(db_get "$path" cksum)"

	if [[ "$f_cksum" != "$db_cksum" ]]; then
		( die "Checksum does not match [%s]: %s [%s]\n" "$db_cksum" "$path" "$f_cksum" ) \
			|| (( arg_all )) || exit 10
	else
		printf "Checksum matches: %s\n" "$path"
	fi

	return 0
}

cmd_verify() {
	db_init

	msg "Verifying: %s\n" "$arg_path"

	find "$arg_path" -type f -printf "%P\n" |
	(
		pids=()
		while :; do
			if (( ${arg_parallel[0]} )); then
				spawn_tasks verify || break
				refresh_pids
			else
				read path || break
				verify "$path"
			fi
		done
		barrier_pids
	) || exit $?
}

##
# PARSE OPTIONS
#
prog_usage() {
	printf -- "\
Usage: %s [<options>] <command> <path>

Commands available:
    update    Update checksum database, reporting changed files.
    verify    Verify files from database.

Options:
    --backend
        Select database backend. Default is 'file'.
        Available backends: file,
    --dbprefix
        Specify a database path prefix.
    --all
        If we encounter a non-critical error during update or verify, continue.
    --parallel
        Specify number of parallel verify/update tasks. Format: <tasks>[,<jobs-per-task>]. Implies --all.
" "$PROGNAME"
	exit 42
}

arg_backend=file
arg_dbprefix=
arg_all=0
arg_parallel=(0)

while :; do
	case "${1:-}" in
		--backend)
			[[ -n "${2:-}" ]] || prog_usage
			arg_backend="$2"
			shift
			;;
		--dbprefix)
			[[ -n "${2:-}" ]] || prog_usage
			arg_dbprefix="$2"
			shift
			;;
		--all)
			arg_all=1
			;;
		--parallel)
			[[ -n "${2:-}" ]] || prog_usage
			IFS=, read -ra arg_parallel <<< "$2"
			if (( ${#arg_parallel[@]} == 1 )); then
				arg_parallel+=(8)
			fi
			shift
			;;
		-*) prog_usage ;;
		*) break;;
	esac
	shift
done

cmd="${1:-}"
shift || :

trap 'msg "User aborted!\n"; exit 42' INT

start_time="$(date +"%s")"
case "${cmd}" in
	update|verify)
		arg_path="${1:-}"

		if [[ -z "$arg_path" ]]; then
			die "Please specify a valid directory!\n"
		fi

		if [[ ! -d "$arg_path" ]]; then
			die "Not a valid directory: %s\n" "$arg_path"
		fi

		arg_path="$(cd "$arg_path" && pwd)"
		arg_dbpath="${arg_dbprefix%/}${arg_path%/*}/.${arg_path##*/}-${PROGNAME}.${arg_backend}"
		
		cmd_${cmd}
		;;
	*)
		prog_usage
		;;
esac

total_time=$(( $(date +"%s") - start_time ))
msg "Elapsed time: %.2d:%.2d\n" "$(( total_time / 60 ))" "$(( total_time % 60 ))" 1>&2

exit 0
